<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/question_detailed_dark"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/language"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="@drawable/grey_background_rounded_strong" />

    <Spinner
        android:id="@+id/spinner_filter_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:entries="@array/languages_filter" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/category"
        android:gravity="center"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/grey_background_rounded_strong" />

    <Spinner
        android:id="@+id/spinner_filter_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:entries="@array/categories_filter" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/question_detailed_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/button_filter_negative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/dialogButtonNegative"
            android:textColor="@android:color/holo_red_light"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/button_filter_positive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/dialogButtonPositive"
            android:textColor="@android:color/holo_green_dark"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>


</LinearLayout>