<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sortNumber_top_polls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sort_number_background"
            android:gravity="center"
            android:textStyle="italic"
            android:textSize="12sp"
            android:padding="1dp"/>

        <TextView
            android:id="@+id/question_top_polls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/top_polls_question_background"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:padding="3dp"/>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/table_row_header"
                    android:text="@string/votes"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:padding="3dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/table_row_header"
                    android:gravity="center"
                    android:text="@string/category"
                    android:textSize="12sp"
                    android:padding="3dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/table_row_header"
                    android:gravity="center"
                    android:text="@string/createdBy"
                    android:textSize="12sp"
                    android:padding="3dp"
                    android:layout_weight="1"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/overallVotes_top_polls"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:padding="3dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/category_top_polls"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:padding="3dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/createdBy_top_polls"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:padding="3dp"
                    android:layout_weight="1"/>

            </TableRow>

        </TableLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>