<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sortNumber_top_polls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/sortNumber_dark"
            android:gravity="center"
            android:textStyle="italic"
            android:textSize="12sp"
            android:padding="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/question_top_polls"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/question_dark"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:padding="3dp"
                android:layout_weight="0.9"/>


            <ImageButton
                android:id="@+id/button_fav_top_polls"
                android:contentDescription="Add Poll to your Observe List"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/favorite_light"
                android:src="@drawable/ic_star_border_white_24dp"
                android:layout_weight="0.1"/>

        </LinearLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/table_row_header"
                    android:text="@string/votes"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:padding="3dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/table_row_header"
                    android:gravity="center"
                    android:text="@string/category"
                    android:textSize="12sp"
                    android:padding="3dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/table_row_header"
                    android:gravity="center"
                    android:text="@string/createdBy"
                    android:textSize="12sp"
                    android:padding="3dp"
                    android:layout_weight="1"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/overallVotes_top_polls"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:padding="3dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/category_top_polls"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:padding="3dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/createdBy_top_polls"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:padding="3dp"
                    android:layout_weight="1"/>

            </TableRow>

        </TableLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>